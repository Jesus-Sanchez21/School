@model Aluno

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-dark">Deleção de Aluno</h2>
            <hr />
        </div>

        <div class="form-floating mb-3 row">
            <label asp-for="Nome" disabled class="p-0"></label>
            <input asp-for="Nome" disabled class="form-control" />
        </div>
        <div class="form-floating mb-3 row">
            <label asp-for="Idade" disabled class="p-0"></label>
            <input asp-for="Idade" disabled class="form-control" />
        </div>
        <div class="form-floating mb-3 row">
            <label asp-for="Numero" disabled class="p-0"></label>
            <input asp-for="Numero" disabled class="form-control" />
        </div>
        <div class="form-floating mb-3 row">
            <label asp-for="TurmaId" disabled class="p-0"></label>
            <input asp-for="TurmaId" disabled class="form-control" />
        </div>

        <button type="submit" class="btn btn-danger" style="width:150px"><i class="bi bi-trash"></i></button>
        <a asp-controller="Aluno" asp-action="Index" class="btn btn-secondary" style="width:150px"><i class="bi bi-arrow-return-left"></i></a>
    </div>
</form>

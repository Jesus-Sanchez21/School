@model Aluno

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-dark">Criação de Aluno</h2>
            <hr />
        </div>

        <div class="form-floating mb-3 row">
            <label asp-for="Nome" class="p-0"></label>
            <input asp-for="Nome" class="form-control" />
        </div>
        <div class="form-floating mb-3 row">
            <label asp-for="Idade" class="p-0"></label>
            <input asp-for="Idade" class="form-control" />
        </div>
        <div class="form-floating mb-3 row">
            <label asp-for="Numero" class="p-0"></label>
            <input asp-for="Numero" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary" style="width:150xp"><i class="bi bi-upload"></i></button>
    </div>
</form>
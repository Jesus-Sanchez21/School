@model School.Models.ViewModels.DisciplinaCreateVM

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-dark">Criação de Disciplina</h2>
            <hr />
        </div>

        <div class="form-floating mb-3 row">
            <label asp-for="Nome" class="p-0"></label>
            <input asp-for="Nome" class="form-control" />
        </div>
        <div class="form-floating mb-3 row">
            <label asp-for="Ano" class="p-0"></label>
            <input asp-for="Ano" class="form-control" />
        </div>
        <div class="form-floating mb-3 row">
            <label asp-for="ProfessorId" class="p-0"></label>
            <select asp-for="ProfessorId" asp-items="@Model.ProfessorList" class="form-select"></select>
        </div>

        <button type="submit" class="btn btn-primary" style="width:150px"><i class="bi bi-upload"></i></button>
        <a asp-controller="Disciplina" asp-action="Index" class="btn btn-secondary" style="width:150px"><i class="bi bi-arrow-return-left"></i></a>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}